{
  "name": "gloomvendor-server",
  "version": "1.0.0",
  "main": "build/index.js",
  "repository": "git@github.com:morpheusapps/gloomvendor-server.git",
  "author": "maorRoz <andory@post.bgu.ac.il>",
  "license": "MIT",
  "devDependencies": {
    "@nestjs/testing": "^6.11.8",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.10",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.6",
    "@types/supertest": "^2.0.8",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/experimental-utils": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.8",
    "@nestjs/core": "^6.11.8",
    "@nestjs/platform-express": "^6.11.8",
    "@nestjs/swagger": "^4.3.1",
    "@nestjs/typeorm": "^6.3.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "express": "^4.17.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.25",
    "winston": "^3.2.1"
  },
  "scripts": {
    "start": "node build/src/index.js",
    "dev": "PORT=8010 nodemon --inspect=5010 src/index.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest --runInBand --watch",
    "test:coverage": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)(test).ts"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "tsc --noEmit && yarn lint && git add && lint-staged"
    }
  }
}
